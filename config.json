{
  "system": {
    "worker_threads": 8,
    "monitor_interval": 500,
    "realtime_priority": true,
    "log": {
      "level": "info",
      "file": "logs/stream.log",
      "console": true,
      "file_output": true
    }
  },
  "streams": [
    {
      "id": "camera1",
      "name": "摄像头1",
      "url": "rtsp://192.168.1.100:554/stream?tcp",
      "type": "pull",
      "hwaccel": "cuda",
      "codec": "h264",
      "max_reconnect": 10,
      "reconnect_delay": 1000,
      "auto_reconnect": true,
      "low_latency": true,
      "max_queue_size": 3
    },
    {
      "id": "camera2",
      "name": "摄像头2",
      "url": "rtsp://192.168.1.101:554/stream?tcp",
      "type": "pull",
      "hwaccel": "cuda",
      "codec": "h264",
      "max_reconnect": 10,
      "reconnect_delay": 1000,
      "auto_reconnect": true,
      "low_latency": true,
      "max_queue_size": 3
    },
    {
      "id": "rtmp-live",
      "name": "直播推流",
      "url": "rtmp://live.example.com/live/stream1",
      "type": "push",
      "hwaccel": "cuda",
      "width": 1920,
      "height": 1080,
      "bitrate": 4000000,
      "fps": 30,
      "gop": 30,
      "codec": "h264",
      "auto_reconnect": true,
      "low_latency": true,
      "max_queue_size": 3
    },
    {
      "id": "local-display",
      "name": "本地显示",
      "url": "rtmp://localhost:1935/live/preview",
      "type": "push",
      "hwaccel": "cuda",
      "width": 1280,
      "height": 720,
      "bitrate": 2000000,
      "fps": 30,
      "gop": 30,
      "codec": "h264",
      "auto_reconnect": true,
      "low_latency": true,
      "max_queue_size": 2
    }
  ]
}